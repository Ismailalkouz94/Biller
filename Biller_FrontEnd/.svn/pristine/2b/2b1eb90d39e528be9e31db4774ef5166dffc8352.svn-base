<div class="silk-card border-primary">
    <div class="silk-card">
        <div class="silk-card-title">
            <div class="silk-head">
                <div class="silk-pre">
                    <h4> تعديل الفئة</h4>
                </div>
            </div>
            <md-divider></md-divider>
        </div>
        <div class="silk-card-content">
            <form [formGroup]="form" (ngSubmit)="onSubmit()">
                <div class="form-group row">
                    <input class="form-control" hidden="true" type="text" [(ngModel)]="categoryId" [formControl]="form.controls['categoryId']"
                    />

                    <label for="example-email-input" class="col-2 col-form-label"> رمز الفئة الرئيسي</label>
                    <div class="col-4">
							<ngx-dropdown-treeview-select [items]="items" [formControl]="form.controls['parentCategoryId']" [(value)]="value"  (valueChange)="onValueChange($event)">
							</ngx-dropdown-treeview-select>
						</div>
                </div>
                <div class="form-group row">
                    <label for="example-url-input" class="col-2 col-form-label">اسم الفئة </label>
                    <div class="col-4">
                        <input class="form-control" type="text" [(ngModel)]="description" [formControl]="form.controls['description']" id="example-url-input">
                        <small class="silk-block" *ngIf="form.controls['description'].hasError('required') && form.controls['description'].touched"
                            class="mat-text-warn">
                            You must include a descrption.
                        </small>
                    </div>


                    <label for="example-url-input" hidden="true" class="col-2 col-form-label">رقم الطرف</label>
                    <div class="col-4">
                        <input class="form-control" type="text" hidden="true" [formControl]="form.controls['partyId']" [(ngModel)]="partyId" id="example-url-input">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-12">
                        <button class="waves-effect waves-light btn gradient-45deg-light-blue-cyan box-shadow" [disabled]="!form.valid" type="submit">
                            تعديل
                        </button>

                    </div>
                </div>

            </form>

        </div>
    </div>
</div>