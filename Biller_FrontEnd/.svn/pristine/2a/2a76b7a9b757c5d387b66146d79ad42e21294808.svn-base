<div class="silk-card border-primary">
	<div class="silk-card">
		<div class="silk-card-title">
			<div class="silk-head">
				<div class="silk-pre">
					<h4>استعلام الفئات</h4>
					<a routerLink="/config/add-category">
						<button type="button" class="btn waves-effect waves-light gradient-45deg-green-teal gradient-shadow">اضافة فئة جديدة</button>
					</a>

					<md-divider>

					</md-divider>
				</div>
			</div>
			<div class="silk-card-content">
				<!-- <button type="button" class="btn waves-effect waves-light gradient-45deg-amber-amber gradient-shadow" >مشاهدة</button> -->


				<form [formGroup]="form" (ngSubmit)="onSubmit()">

					<div class="form-group row">
						<label for="example-search-input" class="col-2 col-form-label">
							رقم الفئة
						</label>
						<div class="col-4">
							<input class="form-control" [formControl]="form.controls['categoryId']"  type="text" >
						</div>
						<label for="example-email-input" class="col-2 col-form-label"> رمز الفئة الرئيسي</label>
						<div class="col-4">
							<ngx-dropdown-treeview-select [items]="items" [formControl]="form.controls['parentCategoryId']" [(value)]="value"  (valueChange)="onValueChange($event)">
							</ngx-dropdown-treeview-select>
						</div>
					</div>
					<div class="form-group row">
						<label for="example-url-input" class="col-2 col-form-label">اسم الفئة </label>
						<div class="col-4">
							<input class="form-control" type="text" [formControl]="form.controls['description']"   id="example-url-input">
						</div>
						<div class="col-4">
							<input class="form-control" type="text" hidden="true"  id="example-tel-input">
						</div>
					</div>

					<div class="form-group row">
						<div class="col-12">
							<button class="waves-effect waves-light btn gradient-45deg-light-blue-cyan box-shadow" type="submit">
								بحث
							</button>

						</div>
					</div>

				</form>
			</div>

			<div class="form-group row">
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mb-2" widget>
					<div class="silk-card-content widget-body">
						<table class="table">
							<thead class="thead-default">
								<tr>
									<th>
										رقم الفئة
									</th>
									<th>
										اسم الفئة الرئيسية
									</th>
									<th>
										اسم الفئة
									</th>
									<th>
										تعديل
									</th>
									<th>
										حذف
									</th>
								</tr>
							</thead>
							<tbody *ngFor="let item of categoryDate">
								<tr>
									<th scope="row">{{item.categoryId}}</th>
									<td>{{item.parentCategoryId}}</td>
									<td>{{item.description}}</td>
									<td>
											<md-icon (click)="update(item.categoryId)">edit</md-icon> 
										</td>
										<td>
											<md-icon  (click)="openConfirmationDialog(item.categoryId)">delete</md-icon> 
										</td>									
								</tr>								
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>